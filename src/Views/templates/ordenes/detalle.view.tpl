<style>		.h-custom {				background-color: rgba(217, 217, 217, 0.7);		}		.card {				border: none;				border-radius: 10px;		}		.c-details span {				font-weight: 300;				font-size: 13px		}		.icon {				width: 100px;				height: 100px;				background-color: #eee;				border-radius: 10px;				display: flex;				align-items: center;				justify-content: center;				font-size: 39px		}		.badge span {				background-color: #fffbec;				width: 60px;				border-radius: 5px;				display: flex;				color: green;				justify-content: center;				align-items: center		}		.number {				background-color: gray;				opacity: 90%;				color: white;				width: 30px; /* Ajusta este valor según tus necesidades */				height: 30px;				display: flex;				align-items: center;				justify-content: center;				padding: 10px 10px;				border-radius: 50%;				top: 10%;				font-size: medium;				transform: translateY(-80%);		}		.text1 {				color: black;		}		.text2 {				color: #6f6f6f;				padding-bottom: -10px;		}</style><section class="h-100 h-custom">		<div class="container py-5 h-100">				<div>						<h3 class="fw-bold text-gray-900 text-capitalize"><a href="index.php?page=Ordenes_ordenes"						                                                     class="text-decoration-none">								<i class="bi bi-arrow-left text-black"></i></a> Pedido #{{orderId}}						</h3>						<span style="padding-left: 38px;opacity: 90%">Fecha de compra: {{fechaOrden}}</span>				</div>				<div class="container-padre d-flex flex-row justify-content-around mt-5">						<div class="row" style="width: 38rem;max-height: 20rem">								<div class="col-md-4 py-4 bg-white w-100 px-3" style="border-radius: 20px">										<div class="badge d-flex justify-content-end mx-3"><span>COMPLETADA</span></div>										<h4 class="fw-bold fs-5">Detalles del pedido</h4>										<div class="contenedor d-flex mt-3">												<div class="col-md-6">														<div class="info-contacto">																<span class="fw-normal text2">Información de contacto</span>																<div class="d-flex flex-column">																		<span class="">{{correoUsuario}}</span>																</div>														</div>														<div class="info-envio mt-4">																<span class="fw-normal text2">Metódo de entrega</span>																<div class="d-flex flex-column">																		<span class="text1">Los detalles fueron enviados al email 																				<span class="fw-bold">{{correoUsuario}},</span>																		 por favor revise su correo.																		</span>																</div>														</div>												</div>												<div class="col-md-6">														<p class="fw-normal text2">Pago</p>														<div class="info-contacto">																<div class="d-flex flex-column">																		<i class="fab fa-paypal"></i>																		<span class="text1">El pago se realizó a través de Paypal por el monto de - L 																				{{total}}.00	</span>																		<span class="">{{fechaOrden}}</span>																</div>														</div>												</div>										</div>								</div>						</div>						<div class="row" style="width: 30rem;margin-left: -12rem">								<div class="col-md-4 py-4 bg-white w-100 mx-5" style="border-radius: 20px">										{{foreach item}}										<div class="card p-3 mb-2">												<div class="d-flex justify-content-between">														<div class="d-flex flex-row align-items-center">																<div class="icon position-relative">																		<div class="number position-absolute start-0">{{Cantidad}}</div>																		<img class="icon" src="/{{~BASE_DIR}}/servidorImagenes/{{libroImgUrl}}" alt="">																</div>																<div class="ms-2 c-details">																		<h6 class="mb-0">{{Libro}}</h6> <span>{{Autor}}</span>																</div>														</div>														<div class="badge"><span></span>																<span class="fw-normal text-black fs-5 pt-3">L {{Precio}}</span>														</div>												</div>										</div>										{{endfor item}}										<div class="d-flex flex-column mx-3">												<div class="d-flex justify-content-between">														<span class="fs-5 fw-normal">Subtotal</span>														<span class="fw-bold">{{subtotal}}.00 L</span>												</div>												<div class="d-flex justify-content-between">														<span class="fs-5 fw-normal">ISV</span>														<span class="fw-bold">{{isv}}.00 L</span>												</div>												<div class="d-flex justify-content-between mt-3">														<span class="fs-4 fw-bold">Total</span>														<p class="fw-bold fs-4"><span>{{total}}.00 L</span></p>												</div>										</div>								</div>						</div>				</div>		</div></section>