<div class="container">		<h2 class="mb-4 text-xl font-bold text-gray-900 dark:text-white">Tus Ordenes</h2>		<table class="table">				<thead>				<tr>						<th scope="col"># Orden</th>						<th scope="col">Fecha Orden</th>						<th scope="col">Total</th>						<th scope="col">Estatus</th>				</tr>				</thead>				<tbody>				{{foreach ordenes}}				<tr>						<th scope="row">{{orderId}}</th>						<td>{{fechaOrden}}</td>						<td>L {{total}}.00</td>						<td>{{estatus}}</td>						<td class="d-flex justify-content-center">								<a href="index.php?page=Ordenes_OrdenDetalle&id={{orderId}}"								   class="text-white fw-semibold"						       style="padding: 8px 8px; background-color: #4caf50; border-radius: 20px">Ver detalles								</a>						</td>				</tr>				{{endfor ordenes}}				<!-- Puedes agregar más filas aquí -->				</tbody>		</table></div>